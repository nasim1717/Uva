
#include<bits/stdc++.h>
using namespace std;

int main(){
    int a,c,d,b;
    while(cin>>a and a){
            c=0;
        while(a>2){
            d = a/3;
            c+=d;
            b = a%3;
            a = b+d;
        }
        if(a==2)
            c++;
        cout<<c<<endl;
    }
return 0;
}
